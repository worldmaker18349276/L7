head
  link(rel='stylesheet' type='text/css' href='L7.css')
  script(src='L7.js')
.root
  l7-box(style={'--left': '10%', '--top': '10%', '--width': '50%', '--height': '50%'})
    l7-border(slot='top' name='case 1')
      l7-port(name='value 1' type='hidden' style={'--offset': '20%'})
        l7-wire#wire2-start(dir='bottom' type="dashed" to='wire2-end')
      l7-port(name='value 2' type='hollow' style={'--offset': '50%'})
    l7-border(slot='top' name='case 2')
      l7-port(name='value 1' type='hollow' style={'--offset': '60%'})
        l7-wire#wire1-start(dir='bottom' to='wire1-end')
    l7-border(slot='top' name='case 3')
    l7-border(slot='bottom' name='A')
      l7-port(name='x' style={'--offset': '40%'})
        l7-box(dir='top' style={'--width': '20%', '--height': '20%'})
          l7-border(slot='top')
          l7-border(slot='bottom' name='1')
          l7-border(slot='bottom' name='2')
          l7-border(slot='left')
          l7-border(slot='right')
    l7-border(slot='bottom' name='B')
      l7-port(name='t' type='hollow' style={'--offset': '50%'})
        l7-box(dir='top' style={'--width': '20%', '--height': '20%'})
          l7-border(slot='top')
          l7-border(slot='bottom')
            l7-port(style={'--offset': '50%'})
          l7-border(slot='left')
          l7-border(slot='right')
        l7-box(dir='bottom' style={'--width': '30%', '--height': '30%'})
          l7-border(slot='top')
            l7-port(style={'--offset': '20%'})
              l7-box(dir='bottom' style={'--width': '60%', '--height': '50%'})
                l7-border(slot='top')
                l7-border(slot='bottom')
                l7-border(slot='left')
                l7-border(slot='right')
          l7-border(slot='bottom')
          l7-border(slot='left')
          l7-border(slot='right')
      l7-port(name='s' style={'--offset': '70%'})
        l7-box(dir='top' style={'--width': '25%', '--height': '16%'})
          l7-border(slot='top')
          l7-border(slot='bottom')
          l7-border(slot='left')
          l7-border(slot='right')

          l7-box(style={'--left': '50%', '--top': '50%', '--width': '100%', '--height': '100%'})
            l7-border(slot='top')
            l7-border(slot='bottom')
            l7-border(slot='left')
            l7-border(slot='right')
        l7-box(dir='bottom' style={'--width': '20%', '--height': '20%'})
          l7-border(slot='top')
          l7-border(slot='bottom')
          l7-border(slot='left')
          l7-border(slot='right')
    l7-border(slot='left')
      l7-port(style={'--offset': '50%'})
        l7-box(dir='right' style={'--width': '20%', '--height': '20%'})
          l7-border(slot='top')
          l7-border(slot='bottom')
          l7-border(slot='left')
          l7-border(slot='right')
    l7-border(slot='right')
      l7-port(style={'--offset': '50%'})

    l7-box(style={'--left': '10%', '--top': '14%', '--width': '70%', '--height': '50%'})
      l7-border(slot='top')
        l7-port(style={'--offset': '50%'})
          l7-wire#wire1-end(dir='top' from='wire1-start')
      l7-border(slot='bottom' name='True')
      l7-border(slot='bottom' name='False')
      l7-border(slot='left' name='Left')
        l7-port(type='hidden' style={'--offset': '50%'})
          l7-wire#wire2-end(dir='left' type="dashed" from='wire2-start')
      l7-border(slot='left' name='Right')
      l7-border(slot='right')
    l7-box(style={'--left': '34%', '--top': '51%', '--width': '54%', '--height': '35%'})
      l7-border(slot='top' name='~')
      l7-border(slot='top' name='#')
      l7-border(slot='bottom')
      l7-border(slot='left')
      l7-border(slot='right')
